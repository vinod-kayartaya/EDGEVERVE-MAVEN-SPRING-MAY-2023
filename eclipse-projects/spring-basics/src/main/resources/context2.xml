<?xml version="1.0"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	

	<bean name="jdbc-dao" class="com.infosys.dao.JdbcProductDao"  >
		<!-- for each property, spring calls the setters on this object -->
		<property name="driverClassName" value="org.h2.Driver" />
		<property name="url" value="jdbc:h2:tcp://localhost/~/northwind" />
		<property name="user" value="root" />
		<property name="password" value="Welcome#123" />
	</bean>

	
</beans>